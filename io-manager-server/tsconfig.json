{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],

    "module": "Node16",
    "moduleResolution": "Node16",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "sourceMap": true,
    "pretty": true,

    "strict": true,
    "strictNullChecks": false,
    "noImplicitAny": true,
    "outDir": "dist"
  },
  "include": ["src"]
}
